# Drone AI Command System Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NVIDIA API Configuration
# =============================================================================

# Your NVIDIA API Key (get from build.nvidia.com)
NVIDIA_API_KEY=nvapi-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# NVIDIA NIM API Base URL
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# =============================================================================
# Model Configuration
# =============================================================================

# Nemotron model for command parsing and report generation
NEMOTRON_MODEL=nvidia/llama-3.1-nemotron-70b-instruct

# VILA model for vision/image analysis
VILA_MODEL=nvidia/vila

# =============================================================================
# Drone Configuration
# =============================================================================

# Use mock drone for testing (true/false)
USE_MOCK_DRONE=true

# Isaac Sim connection (when not using mock)
ISAAC_SIM_HOST=localhost
ISAAC_SIM_PORT=8211

# =============================================================================
# Logging and Debug
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable verbose API responses
VERBOSE_API=false
